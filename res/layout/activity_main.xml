<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_pane_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- Menu Lateral -->

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_linearlayout" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical" >
                
                
 
                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_select"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:text="Dashboard"
                    android:gravity="left"
                    android:textColor="#ffffff" 
                    android:onClick="onDashBoard"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:background="#26262e"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                
               
                
                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_select"
                   android:paddingLeft="15dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:gravity="left"
                    android:text="Account"
                    android:textColor="#ffffff" 
                    android:onClick="onAccount"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#26262e"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

               
                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_select"
                   android:paddingLeft="15dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:gravity="left"
                    android:text="Income Category"
                    android:textColor="#ffffff" 
                    android:onClick="onIncome"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#26262e"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

               
                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_select"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="15dp"
                    android:gravity="left"
                    android:text="Expenses Category"
                    android:textColor="#ffffff" 
                    android:onClick="onExpenses"
                    />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#26262e"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            
               
               
               <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_select"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:gravity="left"
                    android:paddingLeft="15dp"
                    android:text="Transaction"
                    android:textColor="#ffffff" 
                    android:onClick="onTransaction"
                    />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#26262e"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
               
                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_select"
                  android:paddingLeft="15dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="Reports"
                    android:gravity="left"
                    android:onClick="onReports"
                    android:textColor="#ffffff" />
                
                  <TextView
                    android:id="@+id/textView6"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#26262e"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
               
                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_select"
                  android:paddingLeft="15dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="Backup"
                    android:gravity="left"
                    android:onClick="onBackup"
                    android:textColor="#ffffff" />
                
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white" >

    </RelativeLayout>

</android.support.v4.widget.SlidingPaneLayout>